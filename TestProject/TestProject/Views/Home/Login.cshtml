@{
    ViewData["Title"] = "Privacy Policy";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<form asp-controller="Home" asp-action="LoginCheck" method="post" autocomplete="off" style="width:50%;margin: auto">
  <div class="imgcontainer">
    <img src="img_avatar2.png" alt="Avatar" class="avatar" max-height="20%">
  </div>
    @if (TempData["error"]!=null&&(bool)TempData["error"])
    {
        <div class="alert">
        <span class="closebtn">&times;</span>  
        <strong>@TempData["errmsg"].</strong>
        </div>   
    }
    <div class="container">
    <label for="uname"><b>Username</b></label>
    <input type="text" placeholder="Enter Username" name="uname" required>

    <label for="psw"><b>Password</b></label>
    <input type="password" placeholder="Enter Password" name="psw" required>

    <button type="submit">Login</button>
    <label>
      <input type="checkbox" checked="checked" name="remember"> Remember me
    </label>
  </div>

  <div class="container" style="background-color:#f1f1f1">
    <button type="button" class="cancelbtn">Cancel</button>
    <span class="psw">Forgot <a href="#">password?</a></span>
  </div>
</form>